generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model chargingPoint {
  chargingPointID Int                   @id
  status          chargingPoint_status?
  locationID      Int?
  location        location?             @relation(fields: [locationID], references: [locationID], onDelete: Restrict, onUpdate: Restrict, map: "chargingPoint_ibfk_1")
  users           users[]

  @@index([locationID], map: "locationID")
}

/// The underlying table does not contain a valid unique identifier and can therefore currently not be handled by Prisma Client.
model keyValues {
  maximumPendingTime DateTime @db.Time(0)
  maximumChargeTime  DateTime @db.Time(0)
  checkQueueInterval DateTime @db.Time(0)

  @@ignore
}

model location {
  locationID    Int             @id
  name          String?         @db.VarChar(255)
  wattage       Decimal?        @db.Decimal(5, 0)
  lat           Decimal?        @db.Decimal(10, 0)
  lng           Decimal?        @db.Decimal(10, 0)
  chargingPoint chargingPoint[]
  queue         queue[]
}

model queue {
  locationID     Int
  userID         Int
  queueEntryTime DateTime @default(now()) @db.Timestamp(0)
  users          users    @relation(fields: [userID], references: [id], onUpdate: Restrict, map: "queue_ibfk_1")
  location       location @relation(fields: [locationID], references: [locationID], onUpdate: Restrict, map: "queue_ibfk_2")

  @@id([locationID, userID])
  @@index([userID], map: "userID")
}

model users {
  id               Int                    @id
  email            String?                @db.VarChar(255)
  permissionLevel  users_permissionLevel?
  status           users_status?
  pendingStartTime DateTime               @default(now()) @db.Timestamp(0)
  chargePointID    Int?
  queue            queue[]
  chargingPoint    chargingPoint?         @relation(fields: [chargePointID], references: [chargingPointID], onDelete: Restrict, onUpdate: Restrict, map: "users_ibfk_1")

  @@index([chargePointID], map: "chargePointID")
}

enum users_permissionLevel {
  ADMIN
  USER
  SUPERADMIN
}

enum users_status {
  WAITING
  CHARGING
  IDLE
  PENDING
}

enum chargingPoint_status {
  IDLE
  BROKEN
  CHARGING
}
